// Model Guru
model Guru {
  id        String   @id @default(uuid())
  nip       String   @unique
  nama      String
  email     String   @unique
  telepon   String?
  alamat    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi
  kelasWali      Kelas[]         @relation("WaliKelas")
  mataPelajaran  MataPelajaran[]

  @@map("guru")
}

model Kelas {
  id        String   @id @default(uuid())
  nama      String   // contoh: "X IPA 1", "XI IPS 2"
  tingkat   Int      // contoh: 10, 11, 12
  tahunAjar String   // contoh: "2024/2025"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi
  waliKelasId   String?
  waliKelas     Guru?             @relation("WaliKelas", fields: [waliKelasId], references: [id], onDelete: SetNull)
  siswa         Siswa[]
  mataPelajaran MataPelajaran[]
  jadwal        Jadwal[]

  @@map("kelas")
}

model Siswa {
  id           String   @id @default(uuid())
  nis          String   @unique
  nisn         String   @unique
  nama         String
  jenisKelamin String
  tanggalLahir DateTime
  tempatLahir  String
  alamat       String
  email        String?  @unique
  telepon      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relasi
  kelasId    String?
  kelas      Kelas?       @relation(fields: [kelasId], references: [id], onDelete: SetNull)
  siswaWali  SiswaWali[]
  nilai      Nilai[]      // tambahkan ini

  @@map("siswa")
}

// Model Wali Siswa
model WaliSiswa {
  id           String   @id @default(uuid())
  nik          String   @unique
  nama         String
  hubungan     String   // contoh: "Ayah", "Ibu", "Wali"
  pekerjaan    String?
  alamat       String?
  telepon      String
  email        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relasi many-to-many dengan Siswa melalui junction table
  siswaWali    SiswaWali[]

  @@map("wali_siswa")
}

// Junction table untuk relasi many-to-many Siswa dan WaliSiswa
model SiswaWali {
  id          String    @id @default(uuid())
  siswaId     String
  waliSiswaId String
  isPrimary   Boolean   @default(false) // menandakan wali utama
  createdAt   DateTime  @default(now())

  // Relasi ke Siswa dan WaliSiswa
  siswa       Siswa     @relation(fields: [siswaId], references: [id], onDelete: Cascade)
  waliSiswa   WaliSiswa @relation(fields: [waliSiswaId], references: [id], onDelete: Cascade)

  @@unique([siswaId, waliSiswaId])
  @@map("siswa_wali")
}

model MataPelajaran {
  id          String   @id @default(uuid())
  kode        String   @unique // contoh: "MTK", "BIN", "IPA"
  nama        String   // contoh: "Matematika", "Bahasa Indonesia"
  deskripsi   String?  // deskripsi singkat mata pelajaran
  kkm         Int?     // Kriteria Ketuntasan Minimal, contoh: 75
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi
  kelasId     String
  guruId      String
  kelas       Kelas    @relation(fields: [kelasId], references: [id], onDelete: Cascade)
  guru        Guru     @relation(fields: [guruId], references: [id], onDelete: Cascade)
  jadwal      Jadwal[]
  nilai       Nilai[]

  @@unique([kelasId, kode])
  @@map("mata_pelajaran")
}
model Jadwal {
  id                String        @id @default(uuid())
  hari              String
  jamMulai          String
  jamSelesai        String
  ruangan           String?
  semester          Int
  tahunAjar         String
  isActive          Boolean       @default(true)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relasi
  kelasId           String
  mataPelajaranId   String
  kelas             Kelas         @relation(fields: [kelasId], references: [id], onDelete: Cascade)
  mataPelajaran     MataPelajaran @relation(fields: [mataPelajaranId], references: [id], onDelete: Cascade)

  // Prevent duplicate schedule
  @@unique([kelasId, hari, jamMulai, semester, tahunAjar])
  @@map("jadwal")
}

model Nilai {
  id                String        @id @default(uuid())
  jenisNilai        String
  nilai             Int
  tanggal           DateTime
  keterangan        String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relasi
  siswaId           String
  mataPelajaranId   String
  siswa             Siswa         @relation(fields: [siswaId], references: [id], onDelete: Cascade)
  mataPelajaran     MataPelajaran @relation(fields: [mataPelajaranId], references: [id], onDelete: Cascade)

  @@map("nilai")
}
